<a href="/dashboard">&larr; Back</a>
<div class="admin-title">
    <h2>View / Edit post</h2>
</div>

<form action="/edit_post/<%= data._id %>?_method=put" method="post">
    <label for="title"><b>Title</b></label>
    <input type="text" class="form-control" placeholder="Post Title" name="title" value="<%= data.title %>" required>

    <label for="body"><b>Content</b></label>
    <textarea name="body" class="form-control" cols="50" rows="10" required><%= data.body %></textarea>

    <input type="submit" value="Update" class="btn" >
</form>

