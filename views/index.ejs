<div class="author">
  <h1 class="author_heading d-flex justify-content-center font-weight-bold">
    Hi, I am Yash
  </h1>
  <p class="author_body d-flex justify-content-center">Full stack developer</p>
</div>

<img
  src="https://free4kwallpapers.com/uploads/wallpaper/bmw-car-by-javier-oquendo-wallpaper-1024x768-wallpaper.jpg"
  alt="person looking out through out window"
  class="hero_image"
  width="981"
  height="528"
/>

<section class="articles">
  <h2 class="articles_heading font-weight-bold">Latest Posts</h2>
  <div class="row">
    <% data.forEach(post => { %>
    <div class="col-sm-7">
      <li type="none" class="">
        <a href="/post/<%- post._id %>" class="">
          <span><%- post.title %></span>
        </a>
      </li>
    </div>
    <hr>
    <div class="col-sm-5 d-flex justify-content-end">
      <li type="none" class="">
        <a href="#" class="text-dark">
          <span><%- post.createdAt.toDateString() %></span>
        </a>
      </li>
    </div>
    <% }) %>
  </div>
  <% if (nextPage !== null) { %>
    <a href="/?page=<%- nextPage%>" class="pagination">&lt; View Older Posts</a>
  <% } %>
</section>
